# 时区配置
# 默认时区设置 (默认为中国标准时间)
REACT_APP_DEFAULT_TIMEZONE=Asia/Shanghai

# 是否启用自动时区检测 (true/false)
REACT_APP_AUTO_DETECT_TIMEZONE=false

# 是否在时间显示中显示时区后缀 (true/false)
REACT_APP_SHOW_TIMEZONE_SUFFIX=true

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bread_manager
DB_USER=root
DB_PASSWORD=

# 服务器配置
PORT=3000
NODE_ENV=development

# 飞书认证配置
FEISHU_APP_ID=your_feishu_app_id
FEISHU_APP_SECRET=your_feishu_app_secret
FEISHU_REDIRECT_URI=http://localhost:3000/auth/feishu/callback

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log